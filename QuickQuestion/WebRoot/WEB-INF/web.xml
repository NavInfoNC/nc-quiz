    <servlet-class>com.tecyle.question.servlet.QuestionServlet</servlet-class>
  </servlet>
  <servlet>
    <description>answer request</description>
    <display-name>answer request</display-name>
    <servlet-name>AnswerServlet</servlet-name>
    <servlet-class>com.tecyle.question.servlet.AnswerServlet</servlet-class>
  </servlet>
  <servlet>
    <description>description</description>
    <display-name>display</display-name>
    <servlet-name>ReloadQuestionsServlet</servlet-name>
    <servlet-class>com.tecyle.question.servlet.ReloadQuestionsServlet</servlet-class>
  </servlet>
  <servlet>
    <description>description</description>
    <display-name>display</display-name>
    <servlet-name>TestServlet</servlet-name>
    <servlet-class>com.tecyle.question.servlet.TestServlet</servlet-class>
  </servlet>
  <servlet>
    <description>description</description>
    <display-name>display</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.tecyle.question.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <description>description</description>
    <display-name>display</display-name>
    <servlet-name>LoginActionServlet</servlet-name>
    <servlet-class>com.tecyle.question.servlet.LoginActionServlet</servlet-class>
  </servlet>
  <servlet>
    <description>description</description>
    <display-name>display</display-name>
    <servlet-name>GameOverServlet</servlet-name>
    <servlet-class>com.tecyle.question.servlet.GameOverServlet</servlet-class>
  </servlet>
  <servlet>
    <description>description</description>
    <display-name>display</display-name>
    <servlet-name>ManagerServlet</servlet-name>
    <servlet-class>com.tecyle.question.servlet.ManagerServlet</servlet-class>
  </servlet>
  <servlet>
    <description>description</description>
    <display-name>display</display-name>
    <servlet-name>ViewServlet</servlet-name>
    <servlet-class>com.tecyle.question.servlet.ViewServlet</servlet-class>
  </servlet>
  <servlet>
