    <display-name>display</display-name>
    <servlet-name>TokensAccessControlServlet</servlet-name>
    <servlet-class>com.tecyle.question.servlet.TokensAccessControlServlet</servlet-class>
  </servlet>













  <servlet-mapping>
    <servlet-name>QuestionServlet</servlet-name>
    <url-pattern>/question.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AnswerServlet</servlet-name>
    <url-pattern>/answer.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ReloadQuestionsServlet</servlet-name>
    <url-pattern>/yuduki/reloadQuestions</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TestServlet</servlet-name>
    <url-pattern>/test.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginActionServlet</servlet-name>
    <url-pattern>/signIn</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GameOverServlet</servlet-name>
    <url-pattern>/gameOver.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ManagerServlet</servlet-name>
    <url-pattern>/yuduki/manager.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ViewServlet</servlet-name>
    <url-pattern>/yuduki/view.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SubmitServlet</servlet-name>
    <url-pattern>/submit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DatabaseAccessControlServlet</servlet-name>
    <url-pattern>/questions.md</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TokensAccessControlServlet</servlet-name>
    <url-pattern>/tokens/*</url-pattern>
  </servlet-mapping>
    <session-config>
        <session-timeout>120</session-timeout>
    </session-config>

</web-app>